@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cloud Kitchen</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cloud_kitchen.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />

    <style>
        #startup-logo {
            transition: opacity 0.5s ease;
        }

    </style>
</head>
<body>
<!-- Startup Splash -->
    <div id="startup-logo" style="position:fixed; top:0; left:0; width:100%; height:100%;
                             background:white; display:flex; justify-content:center;
                             align-items:center; z-index:9999;">
        <img src="~/images/Startup_Logo.png" alt="Logo" style="width:500px; height:auto;">
    </div>

<script>
    window.addEventListener("load", function () {
        const logo = document.getElementById("startup-logo");
        setTimeout(() => {
            logo.style.opacity = 0;
            setTimeout(() => { logo.style.display = "none"; }, 500); // fade out
        }, 1000); // show logo for 1 second
    });
</script>
</body>
</html>