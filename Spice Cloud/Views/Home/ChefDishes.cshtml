

@model List<Spice_Cloud.Models.Dish>
@{
    ViewData["Title"] = "My Dishes";
    Layout = "~/Views/Shared/_ChefLayout.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fff4e6; 
    }

    .dish-card {
        transition: transform 0.3s ease;
        border-radius: 15px;
    }

        .dish-card:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .dish-card img {
            height: 150px;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

    .btn-orange {
        background-color: #ff6f00;
        border-color: #ff6f00;
        color: #fff;
    }

        .btn-orange:hover {
            background-color: #e65100;
            border-color: #e65100;
            color: #fff;
        }
</style>

<div class="container py-5">
    <h2 class="mb-4 text-orange fw-bold">My Dishes</h2>

    <div class="row g-4">
        @foreach (var dish in Model)
        {
            <div class="col-md-4">
                <div class="card dish-card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(dish.ImagePath))
                    {
                        <img src="@dish.ImagePath" class="card-img-top" alt="@dish.DishName" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@dish.DishName</h5>
                        <p class="card-text text-muted mb-2">Category: @dish.Category</p>
                        <p class="card-text text-muted mb-2">Price: $@dish.Price</p>
                        <p class="card-text text-muted mb-3">Discount: @dish.Discount %</p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a href="@Url.Action("UpdateDish", "Home", new { id = dish.Id })" class="btn btn-orange">Update</a>
                            <form asp-action="DeleteDish" asp-controller="Home" method="post" onsubmit="return confirm('Are you sure you want to delete this dish?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@dish.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
