
@{
    Layout = null;
}
@model Chef
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditChef</title>
</head>
<body>
   

    <h2>Edit Chef</h2>

    <form method="post" class="shadow p-4 rounded" style="max-width: 600px; margin:auto;">

        <div class="form-group mb-3">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Mobile</label>
            <input asp-for="Mobile" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Address</label>
            <input asp-for="Address" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Area</label>
            <input asp-for="Area" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Speciality</label>
            <input asp-for="Speciality" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Update</button>
        <a href="@Url.Action("ManageChefs", "Home")" class="btn btn-secondary">Cancel</a>
    </form>

</body>
</html>
