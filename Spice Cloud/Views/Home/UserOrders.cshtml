@model List<Spice_Cloud.Models.Order>

@{
    ViewData["Title"] = "My Orders";
    Layout = "~/Views/Shared/_User_dash.cshtml";
}

<h2 class="mb-4">My Orders</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no orders yet.</div>
}
else
{
    <div class="accordion" id="ordersAccordion">
        @for (int i = 0; i < Model.Count; i++)
        {
            var order = Model[i];
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@i" aria-expanded="false" aria-controls="collapse@i">
                        Order #@order.Id - @order.OrderDate.ToString("dd MMM yyyy hh:mm tt") -
                        <span class="badge @(order.Status == "Paid" ? "bg-success" : "bg-warning")">@order.Status</span> - ₹@order.TotalAmount
                    </button>
                </h2>
                <div id="collapse@i" class="accordion-collapse collapse" aria-labelledby="heading@i" data-bs-parent="#ordersAccordion">
                    <div class="accordion-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Dish</th>
                                    <th>Price</th>
                                    <th>Discount (%)</th>
                                    <th>Quantity</th>
                                    <th>Final Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.Items)
                                {
                                    <tr>
                                        <td>@item.Dish.DishName</td>
                                        <td>₹@item.Price</td>
                                        <td>@item.Discount</td>
                                        <td>@item.Quantity</td>
                                        <td>₹@item.FinalPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <p><strong>Total Amount:</strong> ₹@order.TotalAmount</p>
                        <p><strong>Payment ID:</strong> @(string.IsNullOrEmpty(order.PaymentId) ? "Pending" : order.PaymentId)</p>
                        <p><strong>Razorpay Order ID:</strong> @order.RazorpayOrderId</p>

                        @if (order.Status != "Paid")
                        {
                            <a href="@Url.Action("Index", "Payment", new { orderId = order.RazorpayOrderId })" class="btn btn-warning">
                                Pay Now to Confirm Order
                            </a>

                            <a href="@Url.Action("CancelOrder", "Home", new { orderId = order.RazorpayOrderId })"
                               class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to cancel this order?');">
                                Cancel Order
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
