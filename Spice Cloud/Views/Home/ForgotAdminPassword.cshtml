@{
    ViewData["Title"] = "Forgot Password";
}
<link rel="stylesheet" href="~/css/site.css" />

<div class="container d-flex justify-content-center align-items-center" style="height:90vh">
    <div class="col-md-4 glass-card">
        <h2 class="text-center mb-3">Reset Password</h2>

        @if (TempData["MessageA"] != null)
        {
            <div class="alert alert-info">@TempData["MessageA"]</div>
        }

        <form method="post">
            <div class="mb-3">
                <label>Registered Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>

            <button type="submit" class="btn-premium">Send Reset Instructions</button>

            <div class="text-center mt-3">
                <a href="/Home/AdminLogin" class="text-info">Back to Login</a>
            </div>
        </form>
    </div>
</div>
