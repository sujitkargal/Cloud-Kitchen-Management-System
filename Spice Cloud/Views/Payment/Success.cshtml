@{
    ViewData["Title"] = "Payment Success";
    Layout = "~/Views/Shared/_User_dash.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5 text-center">

    <div class="alert alert-success">
        <h2 class="mb-3">🎉 Payment Successful!</h2>
        <p>Your order has been placed successfully.</p>
    </div>

    <div class="card shadow p-4 mt-4" style="max-width: 500px; margin: auto;">
        <h5 class="text-start">Payment Details:</h5>

        <p><strong>Payment ID:</strong> @ViewBag.PaymentId</p>
        <p><strong>Order ID:</strong> @ViewBag.OrderId</p>

        <!-- If signature isn't needed for UI, you can hide it -->
        <p>
            <strong>Verification Status:</strong>
            <span class="text-success">Verified ✔</span>
        </p>
    </div>

    <a href="/Home/UserDashboard" class="btn btn-primary mt-4">
        Go to Dashboard
    </a>
</div>
